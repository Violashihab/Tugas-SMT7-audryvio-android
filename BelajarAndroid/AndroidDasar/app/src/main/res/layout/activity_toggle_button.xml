<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    tools:context=".ToggleButtonActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTORIAL TOGGLEBUTTON DAN SWITCH"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#7B1FA2"
            android:layout_marginBottom="30dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:elevation="4dp" />

        <!-- TOGGLE BUTTON SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”˜ BAGIAN TOGGLEBUTTON"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="#E1BEE7" />

        <!-- 1. Basic ToggleButton -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. ToggleButton Dasar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <ToggleButton
            android:id="@+id/tb_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="ON"
            android:textOff="OFF"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tv_toggle_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Basic: OFF"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- 2. Custom ToggleButton -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. ToggleButton Custom"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <ToggleButton
            android:id="@+id/tb_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="AKTIF"
            android:textOff="NON-AKTIF"
            android:textSize="16sp"
            android:padding="20dp"
            android:background="@drawable/toggle_button_custom"
            android:layout_marginBottom="20dp" />

        <!-- 3. System Control Toggle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. ToggleButton System Control"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <ToggleButton
            android:id="@+id/tb_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="SISTEM AKTIF"
            android:textOff="SISTEM STANDBY"
            android:textSize="14sp"
            android:padding="15dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_system_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SISTEM: NON-AKTIF"
            android:textSize="12sp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- 4. ToggleButton Group -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. ToggleButton Group (Mutually Exclusive)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ToggleButton
                android:id="@+id/tb_option1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="OPTION 1"
                android:textOff="OPTION 1"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginEnd="5dp" />

            <ToggleButton
                android:id="@+id/tb_option2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="OPTION 2"
                android:textOff="OPTION 2"
                android:textSize="12sp"
                android:padding="10dp"
                android:layout_marginEnd="5dp" />

            <ToggleButton
                android:id="@+id/tb_option3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="OPTION 3"
                android:textOff="OPTION 3"
                android:textSize="12sp"
                android:padding="10dp" />

        </LinearLayout>

        <!-- SWITCH SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”Œ BAGIAN SWITCH"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="#E1BEE7" />

        <!-- 5. Basic Switch -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Switch Dasar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Switch
            android:id="@+id/switch_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch Basic"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tv_switch_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Switch: OFF"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- 6. Theme Switch -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Switch Theme Control"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:id="@+id/layout_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp">

            <Switch
                android:id="@+id/switch_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light Theme"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah tema light/dark"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <!-- 7. Switch with Icon -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Switch dengan Icon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:id="@+id/layout_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp">

            <Switch
                android:id="@+id/switch_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sound: ON"
                android:textSize="14sp"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch dengan icon dan real-time update"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <!-- ACTION BUTTONS -->
        <Button
            android:id="@+id/btn_reset_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET SEMUA TOGGLE"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEMBALI KE MENU UTAMA"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>