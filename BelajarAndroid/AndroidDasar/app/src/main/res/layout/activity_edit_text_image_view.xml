<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".EditTextImageViewActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTORIAL EDITTEXT DAN IMAGEVIEW"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1565C0"
            android:layout_marginBottom="30dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:elevation="4dp" />

        <!-- EDIT TEXT SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ BAGIAN EDITTEXT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="#BBDEFB" />

        <!-- 1. Basic EditText -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. EditText Dasar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/et_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama lengkap"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="20dp" />

        <!-- 2. EditText dengan Input Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. EditText dengan Input Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor telepon"
            android:inputType="phone"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="20dp" />

        <!-- 3. Multi-line EditText -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. EditText Multi-line"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/et_multiline"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Tulis pesan disini..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="20dp" />

        <!-- 4. EditText dengan Counter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. EditText dengan Character Counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/et_with_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tulis bio singkat (max 50 karakter)"
            android:inputType="textCapSentences"
            android:maxLines="3"
            android:textSize="16sp"
            android:padding="15dp"
            android:background="@drawable/edittext_rounded"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tv_char_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/50 karakter"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="end"
            android:layout_marginBottom="20dp" />

        <!-- IMAGE VIEW SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ–¼ï¸ BAGIAN IMAGEVIEW"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="#BBDEFB" />

        <!-- 5. Basic ImageView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. ImageView Dasar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/iv_basic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_android"
            android:contentDescription="Logo Android"
            android:layout_gravity="center"
            android:background="@drawable/image_border"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_change_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganti Gambar"
            android:layout_gravity="center"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- 6. ImageView ScaleType -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. ImageView ScaleType"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <RadioGroup
            android:id="@+id/rg_scale_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:id="@+id/rb_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CENTER"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_center_crop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CROP"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_center_inside"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INSIDE"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_fit_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FIT"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_fit_xy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FIT XY"
                android:textSize="10sp" />

        </RadioGroup>

        <ImageView
            android:id="@+id/iv_scale_type"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_landscape"
            android:contentDescription="Demo scale type"
            android:layout_gravity="center"
            android:background="@drawable/image_border"
            android:layout_marginBottom="20dp" />

        <!-- 7. Clickable ImageView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Clickable ImageView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/iv_clickable"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_click_me"
            android:contentDescription="Clickable image"
            android:layout_gravity="center"
            android:background="@drawable/image_border"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tv_image_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info gambar akan ditampilkan di sini"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- RESULTS SECTION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Input:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil akan ditampilkan di sini..."
            android:textSize="14sp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4dp" />

        <!-- ACTION BUTTONS -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT DATA"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HAPUS SEMUA"
            android:textSize="16sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEMBALI KE MENU UTAMA"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>