<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Dark Mode Sederhana"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/text_salam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat datang di aplikasi!"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edit_text_contoh"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ketik sesuatu di sini..."
        android:layout_marginBottom="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <Switch
            android:id="@+id/switch_mode_gelap"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Dark Mode"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_status_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Mode Terang)"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutup aplikasi dan buka kembali untuk melihat efeknya!"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:textColor="#666666"/>

</LinearLayout>