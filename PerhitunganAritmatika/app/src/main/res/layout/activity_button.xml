<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".ButtonActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTORIAL BUTTON"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#2E7D32"
            android:layout_marginBottom="30dp"
            android:padding="15dp"
            android:background="#FFFFFF"
            android:elevation="4dp" />

        <!-- 1. Basic Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Button Dasar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUTTON BASIC"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <!-- 2. Counter Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Button Counter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klik Saya: 0 kali"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <!-- 3. Toggle Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Toggle Button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MATI"
            android:textSize="16sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="30dp" />

        <!-- 4. Disabled/Enabled Button -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Disabled/Enabled Button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_toggle_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUTTON AKTIF"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_change_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOGGLE STATE BUTTON DI ATAS"
            android:textSize="14sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="30dp" />

        <!-- 5. Button dengan Icon -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Button dengan Icon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUTTON DENGAN ICON"
            android:textSize="16sp"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="8dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#607D8B"
            android:padding="12dp"
            android:text="BUTTON ICON KANAN"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- 6. Button Styles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Various Button Styles"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUTLINED BUTTON"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEXT BUTTON"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginBottom="30dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEMBALI KE MENU UTAMA"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>