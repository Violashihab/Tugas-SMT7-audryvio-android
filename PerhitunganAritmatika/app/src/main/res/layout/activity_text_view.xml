<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".TextViewActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTORIAL TEXTVIEW"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1565C0"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:elevation="4dp" />

        <!-- 1. Basic TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. TextView Dasar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini adalah TextView dasar dengan teks biasa"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- 2. TextView dengan Warna -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. TextView dengan Warna"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks warna biru"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks warna merah"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- 3. TextView dengan Ukuran Berbeda -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. TextView dengan Ukuran Berbeda"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks kecil (12sp)"
            android:textSize="12sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks normal (14sp)"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks besar (18sp)"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- 4. TextView dengan Style -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. TextView dengan Style"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks BOLD (Tebal)"
            android:textStyle="bold"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks ITALIC (Miring)"
            android:textStyle="italic"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Teks BOLD ITALIC"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <!-- 5. TextView dengan Background -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. TextView dengan Background"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background kuning"
            android:textSize="14sp"
            android:padding="15dp"
            android:background="#FFEB3B"
            android:gravity="center"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background hijau dengan rounded corner"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:padding="15dp"
            android:background="@drawable/textview_green_bg"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- 6. TextView dengan HTML -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. TextView dengan HTML"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tv_html"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- 7. TextView Dynamic -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. TextView Dynamic (Programmatic)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tv_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teks awal"
            android:textSize="14sp"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="30dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEMBALI KE MENU UTAMA"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>